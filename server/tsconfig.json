{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".", // Good practice: tells TS this is the root of your source files
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.json"], // <-- THIS IS THE KEY CHANGE
  "exclude": ["dist", "node_modules"] // Also good practice to exclude node_modules
}