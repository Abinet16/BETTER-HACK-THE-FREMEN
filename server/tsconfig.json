{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    // Add this line below
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}