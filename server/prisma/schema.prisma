// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Make sure this matches your .env
}

generator client {
  provider = "prisma-client-js"
}

// Your Customer model
model Customer {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)
}
